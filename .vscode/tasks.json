{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Almostengr.InternetMonitor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Almostengr.InternetMonitor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Almostengr.InternetMonitor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Create Release",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "dotnet",
                "clean",
                "-c",
                "RELEASE",
                "&&",
                "dotnet",
                "publish",
                "-r",
                "ubuntu.20.04-x64",
                "-c",
                "RELEASE",
                "${workspaceRoot}",
                "--self-contained",
                "true",
                "&&",
                "cd",
                "${workspaceRoot}/bin/RELEASE/netcoreapp3.1/ubuntu.20.04-x64/publish/",
                "&&",
                "tar",
                "-cf",
                "${workspaceRoot}/release/internetmonitor.tar",
                "*",
                "&&",
                "cd",
                "${workspaceRoot}",
                "&&",
                "dotnet",
                "clean",
                "-c",
                "RELEASE",
                "${workspaceRoot}",
                "&&",
                "git",
                "tag",
                "|",
                "tail",
                "-1",
                "\""
            ],
            "group": "build"
        },
        {
            "label": "Deploy to Local",
            "command": "/bin/bash",
            "type": "shell",
            "args": [
                "-c",
                "\"",
                "dotnet",
                "clean",
                "-c",
                "RELEASE",
                "&&",
                "dotnet",
                "publish",
                "--self-contained",
                "-r",
                "ubuntu.20.04-x64",
                "-c",
                "RELEASE",
                "&&",
                "scp",
                "-pr",
                "chromedriver",
                "internetmonitor.service",
                "${workspaceRoot}/bin/RELEASE/netcoreapp3.1/ubuntu.20.04-x64/publish/*",
                "iamadmin@media://usr/lib/internetmonitor",
                "&&",
                "dotnet",
                "clean",
                "-c",
                "RELEASE",
                "\""
            ],
            "group": "build"
        }
    ]
}