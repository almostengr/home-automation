{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/Almostengr.InternetMonitor.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean debug folder",
            "command" : "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "DEBUG"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean release folder",
            "command" : "dotnet",
            "type": "shell",
            "args": [
                "clean",
                "-c",
                "RELEASE"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish release",
            "command" : "dotnet",
            "type": "shell",
            "args": [
                "publish",
                "-c",
                "RELEASE",
                "-r",
                "ubuntu.20.04-x64",
                "--self-contained",
                "true"
            ],
            "dependsOn": ["Clean release folder"],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish release to local",
            "command" : "scp",
            "type": "shell",
            "args": [
                "-pr",
                "chromedriver",
                "internetmonitor.service",
                "${workspaceRoot}/Almostengr.InternetMonitor.Api/bin/Release/net5.0/publish/*",
                "iamadmin@media://home/iamadmin/internetmonitor",
            ],
            "dependsOn": ["Publish release"],
            "problemMatcher": "$msCompile"
        },
    ]
}